  <!-- Comment Section -->
  <div class="comment-section">
    <!-- Comment List -->
    {{#each comments}}
      <div class="box">
        <article class="media">
          <div class="media-content">
            <div class="content" id="postedComments">
              {{ this.comment }}
            </div>
          </div>
        </article>
      </div>
    {{/each}}

    <!-- Add a Comment -->
    <form action="/api/comments" method="post">
      <div class="field">
        <label class="label">Add a comment:</label>
        <div class="control">
          <textarea class="textarea" name="comment" placeholder="Your comment..." id="commentContent"></textarea>
        </div>
      </div>
       <input type="hidden" id="artId" name="art_id" value="{{artId}}">
      <div class="control">
        <h1>Sharon {{logged_in}}</h1>
        {{#if logged_in}}
        <button id="postCommentBtn" class="button is-primary" type="submit">Post Comment</button>
        {{else}}
        <h2>Please log in to post a comment!</h2>
        {{/if}}
      </div>
    </form>
  </div>