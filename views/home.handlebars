<section class="section">
  {{#each arts}}
    <div class="container">
      {{> imagePost
        title=this.title
        description=this.description
        imageUrl=this.imageUrl
        username=this.user.username
      }}
      {{> commentSection logged_in=../logged_in artId=this.id comments=this.comments }}
    </div>
  {{/each}}
</section>